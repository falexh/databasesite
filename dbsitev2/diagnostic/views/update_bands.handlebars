<html>
<h1 class="pText">Update {{band.name}} {{band.label}}:</h1>

<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
      <form id="update-band" action="/bands" method="post">
        <div class="form-group">
          <p class="titleText">Band Name:</p> <input class="form-control" type="text" name="name" value="{{band.name}}"><br>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text" for="inputGroupSelect01">Label:</label>
            </div>
            <select class="custom-select" name="label">
              {{#each labels}}
              <option value="{{id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>

          <p class="titleText">Hometown:</p> <input class="form-control" type="text" name="hometown" value="{{band.hometown}}"><br>
        </div>
        <button class="btn btn-primary btn-lg" onclick="updateBand({{band.id}})">Update</button>
      </form>
    </div>
  </div>
</div>
<script defer> selectLabel({{band.label}});</script>
</html>
