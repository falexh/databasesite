<html>

<div class="container">
  <div class="jumbotron">
    <h1 class="titleh1"> Bands</h1>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>

        <form id="addBand" action="/bands" method="POST">
          <div class="form-group">
            <input type="name" class="form-control" name="name" placeholder="band name"><br>

            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Label</label>
              </div>
              <select class="custom-select" name="label">
                {{#each labels}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
              </select>
            </div>

            <input type="name" class="form-control" name="hometown" placeholder="hometown"><br>


          </div>
            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </form>
        <br>

<!-- FILTER BY LABEL -->
        <form id='filter_bands' action='' method=''>
          <label id="filterLabel"> Filter by Label </label>
          <select id='label_filter' name="label">
            {{#each labels}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
          <br>
          <input type="button" value="Filter" onclick="filterBandsByLabel()">
          <input type="button" value="Reset Filter" onclick="filterDefault()">
        </form>
        <br>


<!-- TABLE FOR READING -->

        <div class='container'>
              <table class="table table-dark">
                <thead>
                    <th>Band Name</th>
                    <th>Label</th>
                    <th>Hometown</th>
                </thead>
                <tbody>
                  {{#each bands}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{label}}</td>
                        <td>{{hometown}}</td>
                        <td><button class="btn btn-danger btn-lg stretch" onclick="deleteBand({{id}})">Delete</button></td>
                        <td><a href="/bands/{{id}}" class="btn btn-primary btn-lg active stretch" tabindex="-1" role="button" aria-disabled="true">Update</a></td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
        </div>
    </div>
  </div>
</div>


</html>
